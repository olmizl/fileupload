<%- include("include/header"); %>
<main id="main">
  <div id="contents">
    <h2 class="title"><%= title %></h2>
    <form action="/register" method="POST" id="join" class="formBox" enctype="multipart/form-data">
      <!-- 서버로 파일 전송할때 form태그안에 enctype="multipart/form-data" 필수 -->
      <div class="inputBox">
        <label>
          <span class="label">영화제목</span>
          <input type="text" id="movieTitle" name="movieTitle" placeholder="영화제목을 입력하세요" />
        </label>
      </div>
      <div class="inputBox">
        <label>
          <span class="label">개봉날짜</span>
          <input type="text" id="date" name="date" placeholder="개봉날짜" />
        </label>
      </div>
      <div class="inputBox">
        <label>
          <span class="label">장르</span>
          <div>
            <ul class="genreList">
              <li>
                <label for="스릴러"><span>스릴러</span><input type="checkbox" value="스릴러" name="genre" id="스릴러" /></label>
              </li>
              <li>
                <label for="로맨스"><span>로맨스</span><input type="checkbox" value="로맨스" name="genre" id="로맨스" /></label>
              </li>
              <li>
                <label for="코믹"><span>코믹</span><input type="checkbox" value="코믹" name="genre" id="코믹" /></label>
              </li>
              <li>
                <label for="액션"><span>액션</span><input type="checkbox" value="액션" name="genre" id="액션" /></label>
              </li>
              <li>
                <label for="호러"><span>호러</span><input type="checkbox" value="호러" name="genre" id="호러" /></label>
              </li>
            </ul>
          </div>
        </label>
      </div>
      <div class="inputBox">
        <label>
          <span class="label">줄거리</span>
          <textarea type="text" id="desc" name="desc" placeholder=" 줄거리"> </textarea>
        </label>
      </div>
      <div class="inputBox">
        <label>
          <span class="label">평점</span>
          <input type="number" max="5" min="0" step="0.1" id="point" name="point" />
        </label>
      </div>
      <div class="inputBox">
        <label>
          <span class="label">포스터</span>
          <input type="file" id="poster" name="poster" />
        </label>
      </div>

      <div class="btns">
        <button type="submit" id="btnJoin">확인</button>
        <button type="reset">취소</button>
      </div>
    </form>
  </div>
</main>
<script src="//t1.daumcdn.net/mapjsapi/bundle/postcode/prod/postcode.v2.js"></script>

<script></script>
<%- include("include/footer"); %>
